@using EntityLayer.Concrete
@model List<ExperienceSection>

@{
    ViewData["Title"] = "ExperienceSection";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tecrübelerim</title>
    <link rel="stylesheet" href="~/css/table/tabless.css" />
</head>
<body>
    <div class="table-container-wrapper">
        <div class="table-container">
            <h2>TECRÜBELERİM</h2>
            <table class="styled-table">
                <thead>
                    <tr>
                        <th style="text-align:center">#</th>
                        <th style="text-align:center">Hizmet İsmi</th>
                        <th style="text-align:center">Hizmet Yeri</th>
                        <th style="text-align:center">Hizmet Süresi</th>
                        <th style="text-align:center">Hizmet Açıklaması</th>
                        <th style="text-align:center">Sil</th>
                        <th style="text-align:center">Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="50" style="text-align:center; color:red;">Veri yok!</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@item.ExperienceSectionID</td>
                                <td style="text-align:center">@item.ExperienceName</td>
                                <td style="text-align:center">@item.ExperienceLocation</td>
                                <td style="text-align:center">@item.ExperienceTime</td>
                                <td style="text-align:center">@item.ExperienceDescription</td>
                                <td style="text-align:center"><a href="/Admin/DeleteExperienceSection/@item.ExperienceSectionID" class="btn btn-outline-danger">Sil</a></td>
                                <td style="text-align:center"><a href="/Admin/UpdateExperienceSection/@item.ExperienceSectionID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/AddExperienceSection/" class="btn btn-outline-info">Yeni Tecrübe Ekle</a>
        </div>
    </div>
</body>
</html>


