@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
    ViewData["Title"] = "UpdateAdminSection";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Düzenle</title>
    <link rel="stylesheet" href="~/css/form/formcss.css" />
</head>
<body>
    <div class="form-container">
        <h2 style="text-align: center;">Admin Düzenle</h2>
        <form asp-action="UpdateAdminSection" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" id="Email" name="Email" asp-for="Email" placeholder="Email" required />
            </div>
            <div class="form-group">
                <label for="Password">Yeni Şifre</label>
                <input type="password" id="Password" name="Password" placeholder="Yeni Şifre Gir" />
            </div>

            <button type="submit" class="btn btn-outline-info">Kaydet</button>
            <a href="/Admin/AdminSection/" class="btn btn-outline-danger">İptal</a>
        </form>
    </div>
</body>
</html>


