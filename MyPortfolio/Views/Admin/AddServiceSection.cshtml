@using EntityLayer.Concrete
@model ServiceSection

@{
    ViewData["Title"] = "AddServiceSection";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HİZMET EKLE</title>
    <link rel="stylesheet" href="~/css/form/formcss.css" />
</head>
<body>
    <div class="form-container">
        <h2 style=" text-align: center;">Hizmet Ekle</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="skillName">Hizmet İsmi</label>
                <input type="text" id="skillName" placeholder="Hizmet Ekle" asp-for="ServiceName" required>
            </div>
            <div class="form-group">
                <label for="description">Hizmet Açıklama:</label>
                <textarea id="description" placeholder="Açıklama yaz" rows="4" asp-for="ServiceDescription" required></textarea>
            </div>
            <div class="form-group">
                <label for="skillName">Hizmet İconu Ekle</label>
                <input type="text" id="skillName" placeholder="İcon Linki" asp-for="ServiceSectionIconUrl" required>
            </div>
            <button type="submit" class="btn btn-outline-info">Kaydet</button>
            <a href="/Admin/ServiceSection/" class="btn btn-outline-danger">İptal</a>
        </form>
    </div>
</body>
</html>


