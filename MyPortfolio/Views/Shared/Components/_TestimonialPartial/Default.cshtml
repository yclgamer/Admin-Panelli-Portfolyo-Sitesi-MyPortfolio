@using EntityLayer.Concrete
@model List<TestimonialSection>

<div class="testimonial wow fadeInUp" data-wow-delay="0.1s" id="review">
    <div class="container">
        <div class="testimonial-icon">
            <h3 style="color :white; font-size:56px;" >REFERANSLAR</h3>
            <i class="fa fa-quote-left"></i>
        </div>
        <div class="owl-carousel testimonials-carousel">
            @foreach (var item in Model)
            {
                <div class="testimonial-item">
                    <div class="testimonial-img">
                        <img src="@item.ProfilPictureUrl" alt="Image">
                    </div>
                    <div class="testimonial-text">
                        <p>
                            @item.ProfilDescription
                        </p>
                        <h3>@item.ProfilName</h3>
                        <h4>@item.ProfilApellation</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</div>