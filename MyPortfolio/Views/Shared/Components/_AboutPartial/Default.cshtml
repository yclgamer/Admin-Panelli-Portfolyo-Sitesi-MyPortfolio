    @model MyPortfolio.Models.AboutSectionViewModel

<div class="about wow fadeInUp" data-wow-delay="0.1s" id="about">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-img">
                    <img src="~/img/about.jpg" alt="Image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-content">
                    <div class="section-header text-left">
                        <p>Hakkımda Öğren</p>
                        <h2>Tecrübelerim</h2>
                    </div>
                    @foreach (var item in Model.AboutSectionDescriptions)
                    {
                        <div class="about-text">
                            <p>
                                @item.Description
                            </p>
                        </div>
                    }
                    @foreach (var item in Model.AboutSections.Take(4))
                    {
                        <div class="skills">
                            <div class="skill-name">
                                <p>@item.SpecialityName</p><p>@item.SpecialityLevel%</p>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@item.SpecialityLevel" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" data-toggle="modal" data-target="#aboutModal" href="#">Dahasını Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div class="modal fade" id="aboutModal" tabindex="-1" role="dialog" aria-labelledby="aboutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aboutModalLabel">Tüm Yetenekler</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var item in Model.AboutSections)
                {
                    <div class="speciality-details">
                        <h3>@item.SpecialityName</h3>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item.SpecialityLevel" aria-valuemin="0" aria-valuemax="100"></div>
                            <h3>@item.SpecialityLevel</h3>
                        </div>
                    </div>
                    
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
