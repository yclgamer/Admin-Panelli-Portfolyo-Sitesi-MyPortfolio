<script>
document.getElementById('logout-link').addEventListener('click', function(event) {
    event.preventDefault(); // Bağlantının varsayılan davranışını engelle

    // AJAX POST isteği ile çıkış yapma
    fetch(this.getAttribute('data-url'), {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
        },
        credentials: 'same-origin'
    }).then(response => {
        if (response.ok) {
            window.location.href = '@Url.Action("Index", "Home")'; // Çıkış yapıldıktan sonra yönlendirmek istediğiniz sayfa
        } else {
            alert('Çıkış yaparken bir hata oluştu.');
        }
    }).catch(error => {
        console.error('Çıkış yapma hatası:', error);
    });
});
</script>